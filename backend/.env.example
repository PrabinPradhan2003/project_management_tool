# Copy to .env and fill with your values

# Server Configuration
PORT=4000

# Database Configuration
# For local development (recommended for testing):
MONGO_URI=mongodb://localhost:27017/project_management_db

# For MongoDB Atlas (cloud production):
# MONGO_URI=mongodb+srv://<USERNAME>:<PASSWORD>@<CLUSTER>.mongodb.net/<DBNAME>?retryWrites=true&w=majority

# Authentication Secret
# IMPORTANT: Generate a strong random string for production!
JWT_SECRET=your_jwt_secret_key_here_change_in_production

# AI Integration - GROQ API (BONUS FEATURE)
# Get your FREE API key from: https://console.groq.com
# See GROQ_SETUP.md for detailed setup instructions
GROQ_API_KEY=your_groq_api_key_here

# Optional: OpenAI API (alternative to GROQ)
OPENAI_API_KEY=

# Environment
NODE_ENV=development
